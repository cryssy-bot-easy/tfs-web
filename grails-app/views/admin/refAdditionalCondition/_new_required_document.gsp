	<div class="popup_container">
		<table>
			<tr>
				<td class="label_width"><span class="field_label">Condition Code</span></td>
				<td><g:textField name="conditionCode" class="input_field_normal_case" maxlength="10" value="" /></td>
			</tr>
			<tr>
				<td class="label_width"><span class="field_label">Condition Type</span></td>
				<td><g:textField name="conditionType" class="input_field_normal_case" maxlength="7" value="" /></td>
			</tr>
